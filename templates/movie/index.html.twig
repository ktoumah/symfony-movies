{% extends 'base.html.twig' %}

{% block title %}Hello MoviesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des films</h1>
    <table>
        <thead>
        <tr>
            <th>Poster</th>
            <th>Nom</th>
            <th>Langue originale</th>
            <th>Popularit√©</th>
            <th>Note moyenne</th>
            <th>Nombre de votes</th>
        </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td><img src="https://image.tmdb.org/t/p/w500/{{ movie.posterPath }}" alt="{{ movie.name }}" style="max-width: 100px;"></td>
                <td><a href="{{ path('movie_show', {id: movie.id}) }}">{{ movie.name }}</a></td>
                <td>{{ movie.originalLanguage }}</td>
                <td>{{ movie.popularity }}</td>
                <td>{{ movie.voteAverage }}</td>
                <td>{{ movie.voteCount }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
